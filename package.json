{
  "name": "enpage",
  "version": "0.0.1",
  "description": "Monorepo for the Enpage SDK",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "pnpm build && pnpm --reporter-hide-prefix --parallel -r dev",
    "build": "nx run-many -t build --exclude=@enpage/template-example",
    "lint": "pnpm --parallel --recursive lint",
    "ci:lint": "pnpm --parallel --recursive ci:lint",
    "test-create-enpage": "rimraf testing/my-template && pnpm create enpage testing/my-template",
    "changeset": "changeset",
    "publish:packages": "changeset publish",
    "version:packages": "changeset version",
    "docs:dev": "vitepress dev docs --port 8965",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "postinstall": "node ./scripts/postinstall.cjs"
  },
  "keywords": [],
  "author": "Matthias Etienne",
  "license": "AGPL-3.0-only",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "pnpm": ">=8.0.0",
    "node": ">=20.0.0"
  },
  "pnpm": {
    "overrides": {
      "typescript": "5.4.5",
      "react": "18.3.1",
      "react-dom": "18.3.1",
      "@types/react": "18.3.2",
      "@types/react-dom": "18.3.0",
      "@types/node": "^20.0.0",
      "zod": "3.23.8",
      "tailwindcss": "3.4.3",
      "@tailwindcss/container-queries": "0.1.1",
      "@tailwindcss/forms": "0.5.7",
      "tailwind-scrollbar": "3.1.0",
      "vite": "5.3.3",
      "vite-plugin-dts": "3.9.1",
      "vite-tsconfig-paths": "4.3.2",
      "@cloudflare/workers-types": "4.20240725.0",
      "@sinclair/typebox": "0.32.35"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.1",
    "@changesets/cli": "2.27.7",
    "@types/node": "^20.14.10",
    "@vitest/ui": "2.0.3",
    "nx": "19.4.3",
    "rimraf": "6.0.1",
    "tailwindcss": "3.4.4",
    "typescript": "5.5.3",
    "vite": "^5.0.0",
    "vitepress": "1.3.1",
    "vitest": "2.0.3",
    "vue": "3.4.31"
  }
}
