{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "allowJs": true,

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": ["src"]
}
