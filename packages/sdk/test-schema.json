{
  "title": "Template schema",
  "description": "The template configuration schema",
  "type": "object",
  "properties": {
    "manifest": {
      "type": "object",
      "properties": {
        "id": {
          "title": "Template ID",
          "description": "A unique identifier for the template. Can be any string, but should be unique.",
          "type": "string"
        },
        "name": {
          "title": "Template Name",
          "type": "string"
        },
        "description": {
          "title": "Show template description",
          "type": "string"
        },
        "readme": {
          "title": "Readme texts.",
          "description": "A dictionary of readme files for different languages (iso 2 letters code). Currently on supported for 'en' and 'fr'.",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}$": {
              "type": "string"
            }
          }
        },
        "tags": {
          "title": "Tags",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "author": {
          "title": "Author name",
          "type": "string"
        },
        "thumbnail": {
          "title": "Thumbnail",
          "description": "A URL to the thumbnail image for the template.",
          "type": "string"
        },
        "homepage": {
          "title": "Homepage",
          "description": "A URL to the homepage of the template.",
          "type": "string"
        }
      },
      "required": ["name"]
    },
    "themes": {
      "type": "array",
      "items": {
        "$id": "Theme",
        "type": "object",
        "properties": {
          "id": {
            "title": "ID",
            "description": "The unique identifier of the theme",
            "type": "string"
          },
          "name": {
            "title": "Name",
            "description": "The name of the theme",
            "type": "string"
          },
          "description": {
            "title": "Description",
            "description": "The description of the theme",
            "type": "string"
          },
          "tags": {
            "title": "Tags",
            "description": "The tags of the theme",
            "type": "array",
            "items": {
              "title": "Tag",
              "type": "string"
            }
          },
          "colors": {
            "title": "Theme base colors",
            "description": "The base colors of the theme. Each theme must declare all these colors.",
            "type": "object",
            "properties": {
              "primary": {
                "title": "Primary color",
                "description": "The brand's primary color",
                "type": "string"
              },
              "secondary": {
                "title": "Secondary color",
                "description": "The brand's second most used color",
                "type": "string"
              },
              "accent": {
                "title": "Accent color",
                "description": "The brand's least used color",
                "type": "string"
              },
              "neutral": {
                "title": "Neutral color",
                "description": "The base neutral color",
                "type": "string"
              }
            },
            "required": ["primary", "secondary", "accent", "neutral"]
          },
          "typography": {
            "type": "object",
            "properties": {
              "base": {
                "title": "Base font size",
                "description": "The base font size in pixels. It is safe to keep it as is.",
                "default": 16,
                "type": "number"
              },
              "heading": {
                "title": "Heading font",
                "description": "Used for titles and headings.",
                "default": "system-ui",
                "anyOf": [
                  {
                    "title": "System UI",
                    "const": "system-ui",
                    "type": "string"
                  },
                  {
                    "title": "Transitional",
                    "const": "transitional",
                    "type": "string"
                  },
                  {
                    "title": "Old style",
                    "const": "old-style",
                    "type": "string"
                  },
                  {
                    "title": "Humanist",
                    "const": "humanist",
                    "type": "string"
                  },
                  {
                    "title": "Geometric humanist",
                    "const": "geometric-humanist",
                    "type": "string"
                  },
                  {
                    "title": "Classical humanist",
                    "const": "classical-humanist",
                    "type": "string"
                  },
                  {
                    "title": "Neo-grotesque",
                    "const": "neo-grotesque",
                    "type": "string"
                  },
                  {
                    "title": "Monospace slab serif",
                    "const": "monospace-slab-serif",
                    "type": "string"
                  },
                  {
                    "title": "Monospace code",
                    "const": "monospace-code",
                    "type": "string"
                  },
                  {
                    "title": "Industrial",
                    "const": "industrial",
                    "type": "string"
                  },
                  {
                    "title": "Rounded sans",
                    "const": "rounded-sans",
                    "type": "string"
                  },
                  {
                    "title": "Slab serif",
                    "const": "slab-serif",
                    "type": "string"
                  },
                  {
                    "title": "Antique",
                    "const": "antique",
                    "type": "string"
                  },
                  {
                    "title": "Didone",
                    "const": "didone",
                    "type": "string"
                  },
                  {
                    "title": "Handwritten",
                    "const": "handwritten",
                    "type": "string"
                  },
                  {
                    "title": "Custom font name",
                    "description": "A custom font declared in the customFonts property.",
                    "type": "string"
                  }
                ]
              },
              "body": {
                "title": "Body font",
                "description": "Used for paragraphs and body text",
                "default": "system-ui",
                "anyOf": [
                  {
                    "title": "System UI",
                    "const": "system-ui",
                    "type": "string"
                  },
                  {
                    "title": "Transitional",
                    "const": "transitional",
                    "type": "string"
                  },
                  {
                    "title": "Old style",
                    "const": "old-style",
                    "type": "string"
                  },
                  {
                    "title": "Humanist",
                    "const": "humanist",
                    "type": "string"
                  },
                  {
                    "title": "Geometric humanist",
                    "const": "geometric-humanist",
                    "type": "string"
                  },
                  {
                    "title": "Classical humanist",
                    "const": "classical-humanist",
                    "type": "string"
                  },
                  {
                    "title": "Neo-grotesque",
                    "const": "neo-grotesque",
                    "type": "string"
                  },
                  {
                    "title": "Monospace slab serif",
                    "const": "monospace-slab-serif",
                    "type": "string"
                  },
                  {
                    "title": "Monospace code",
                    "const": "monospace-code",
                    "type": "string"
                  },
                  {
                    "title": "Industrial",
                    "const": "industrial",
                    "type": "string"
                  },
                  {
                    "title": "Rounded sans",
                    "const": "rounded-sans",
                    "type": "string"
                  },
                  {
                    "title": "Slab serif",
                    "const": "slab-serif",
                    "type": "string"
                  },
                  {
                    "title": "Antique",
                    "const": "antique",
                    "type": "string"
                  },
                  {
                    "title": "Didone",
                    "const": "didone",
                    "type": "string"
                  },
                  {
                    "title": "Handwritten",
                    "const": "handwritten",
                    "type": "string"
                  }
                ]
              }
            },
            "required": ["base", "heading", "body"]
          },
          "customFonts": {
            "title": "Custom fonts",
            "description": "The custom fonts used in the theme",
            "type": "array",
            "items": {
              "title": "Custom font",
              "type": "object",
              "properties": {
                "name": {
                  "title": "Name",
                  "description": "The name of the font",
                  "type": "string"
                },
                "src": {
                  "title": "Font URL",
                  "description": "The URL of the font",
                  "type": "string"
                },
                "display": {
                  "title": "Display",
                  "default": "auto",
                  "anyOf": [
                    {
                      "title": "Auto",
                      "const": "auto",
                      "type": "string"
                    },
                    {
                      "title": "Swap",
                      "const": "swap",
                      "type": "string"
                    },
                    {
                      "title": "Block",
                      "const": "block",
                      "type": "string"
                    },
                    {
                      "title": "Fallback",
                      "const": "fallback",
                      "type": "string"
                    },
                    {
                      "title": "Optional",
                      "const": "optional",
                      "type": "string"
                    }
                  ]
                },
                "stretch": {
                  "title": "Stretch",
                  "default": "normal",
                  "anyOf": [
                    {
                      "title": "Normal",
                      "const": "normal",
                      "type": "string"
                    },
                    {
                      "title": "Ultra condensed",
                      "const": "ultra-condensed",
                      "type": "string"
                    },
                    {
                      "title": "Extra condensed",
                      "const": "extra-condensed",
                      "type": "string"
                    },
                    {
                      "title": "Condensed",
                      "const": "condensed",
                      "type": "string"
                    },
                    {
                      "title": "Semi condensed",
                      "const": "semi-condensed",
                      "type": "string"
                    },
                    {
                      "title": "Semi expanded",
                      "const": "semi-expanded",
                      "type": "string"
                    },
                    {
                      "title": "Expanded",
                      "const": "expanded",
                      "type": "string"
                    },
                    {
                      "title": "Extra expanded",
                      "const": "extra-expanded",
                      "type": "string"
                    },
                    {
                      "title": "Ultra expanded",
                      "const": "ultra-expanded",
                      "type": "string"
                    },
                    {
                      "title": "Custom",
                      "type": "string"
                    }
                  ]
                },
                "style": {
                  "title": "Style",
                  "default": "normal",
                  "anyOf": [
                    {
                      "title": "Normal",
                      "const": "normal",
                      "type": "string"
                    },
                    {
                      "title": "Italic",
                      "const": "italic",
                      "type": "string"
                    },
                    {
                      "title": "Oblique",
                      "const": "oblique",
                      "type": "string"
                    }
                  ]
                },
                "weight": {
                  "title": "Weight",
                  "default": "normal",
                  "anyOf": [
                    {
                      "title": "Normal",
                      "const": "normal",
                      "type": "string"
                    },
                    {
                      "title": "Bold",
                      "const": "bold",
                      "type": "string"
                    },
                    {
                      "title": "Bolder",
                      "const": "bolder",
                      "type": "string"
                    },
                    {
                      "title": "Lighter",
                      "const": "lighter",
                      "type": "string"
                    },
                    {
                      "title": "100",
                      "const": "100",
                      "type": "string"
                    },
                    {
                      "title": "200",
                      "const": "200",
                      "type": "string"
                    },
                    {
                      "title": "300",
                      "const": "300",
                      "type": "string"
                    },
                    {
                      "title": "400",
                      "const": "400",
                      "type": "string"
                    },
                    {
                      "title": "500",
                      "const": "500",
                      "type": "string"
                    },
                    {
                      "title": "600",
                      "const": "600",
                      "type": "string"
                    },
                    {
                      "title": "700",
                      "const": "700",
                      "type": "string"
                    },
                    {
                      "title": "800",
                      "const": "800",
                      "type": "string"
                    },
                    {
                      "title": "900",
                      "const": "900",
                      "type": "string"
                    }
                  ]
                }
              },
              "required": ["name", "src"]
            }
          }
        },
        "required": ["id", "name", "colors", "typography"]
      }
    },
    "datasources": {
      "type": "object",
      "patternProperties": {
        "^(.*)$": {
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "schema": {
                  "additionalProperties": true,
                  "type": "object",
                  "properties": {}
                },
                "refresh": {
                  "type": "object",
                  "properties": {
                    "method": {
                      "anyOf": [
                        {
                          "const": "interval",
                          "type": "string"
                        },
                        {
                          "const": "manual",
                          "type": "string"
                        }
                      ]
                    },
                    "interval": {
                      "type": "number"
                    }
                  },
                  "required": ["method"]
                },
                "sampleData": {}
              },
              "required": ["name", "schema"]
            },
            {
              "type": "object",
              "properties": {
                "provider": {
                  "anyOf": [
                    {
                      "const": "youtube-list",
                      "type": "string"
                    },
                    {
                      "anyOf": [
                        {
                          "const": "facebook-posts",
                          "type": "string"
                        },
                        {
                          "const": "instagram-feed",
                          "type": "string"
                        },
                        {
                          "const": "threads-media",
                          "type": "string"
                        }
                      ]
                    },
                    {
                      "const": "mastodon-status",
                      "type": "string"
                    },
                    {
                      "const": "rss",
                      "type": "string"
                    },
                    {
                      "const": "tiktok-video",
                      "type": "string"
                    },
                    {
                      "const": "json",
                      "type": "string"
                    }
                  ]
                },
                "options": {
                  "anyOf": [
                    {
                      "type": "object",
                      "properties": {
                        "channelId": {
                          "type": "string"
                        },
                        "order": {
                          "type": "string"
                        },
                        "maxResults": {
                          "type": "number"
                        },
                        "regionCode": {
                          "type": "string"
                        },
                        "relevanceLanguage": {
                          "type": "string"
                        }
                      },
                      "required": ["channelId"]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "limit": {
                          "type": "number"
                        }
                      }
                    },
                    {
                      "type": "object",
                      "properties": {
                        "username": {
                          "type": "string"
                        }
                      },
                      "required": ["username"]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "url": {
                          "format": "uri",
                          "type": "string"
                        }
                      },
                      "required": ["url"]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "maxCount": {
                          "type": "number"
                        }
                      }
                    },
                    {
                      "type": "object",
                      "properties": {
                        "url": {
                          "type": "string"
                        },
                        "headers": {
                          "type": "object",
                          "patternProperties": {
                            "^(.*)$": {
                              "type": "string"
                            }
                          }
                        }
                      },
                      "required": ["url"]
                    }
                  ]
                },
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "sampleData": {},
                "refresh": {
                  "type": "object",
                  "properties": {
                    "method": {
                      "anyOf": [
                        {
                          "const": "interval",
                          "type": "string"
                        },
                        {
                          "const": "manual",
                          "type": "string"
                        },
                        {
                          "const": "live",
                          "type": "string"
                        }
                      ]
                    },
                    "interval": {
                      "type": "number"
                    }
                  },
                  "required": ["method"]
                }
              },
              "required": ["provider", "options", "name"]
            }
          ]
        }
      }
    },
    "pages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "bricks": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "title": "Brick type",
                  "description": "The type of the brick. A brick is an element in the layout.",
                  "anyOf": [
                    {
                      "const": "button",
                      "type": "string"
                    },
                    {
                      "const": "card",
                      "type": "string"
                    },
                    {
                      "const": "carousel",
                      "type": "string"
                    },
                    {
                      "const": "countdown",
                      "type": "string"
                    },
                    {
                      "const": "footer",
                      "type": "string"
                    },
                    {
                      "const": "form",
                      "type": "string"
                    },
                    {
                      "const": "header",
                      "type": "string"
                    },
                    {
                      "const": "hero",
                      "type": "string"
                    },
                    {
                      "const": "icon",
                      "type": "string"
                    },
                    {
                      "const": "image",
                      "type": "string"
                    },
                    {
                      "const": "images-wall",
                      "type": "string"
                    },
                    {
                      "const": "map",
                      "type": "string"
                    },
                    {
                      "const": "social-links",
                      "type": "string"
                    },
                    {
                      "const": "text",
                      "type": "string"
                    },
                    {
                      "const": "video",
                      "type": "string"
                    }
                  ]
                },
                "id": {
                  "title": "ID",
                  "description": "A unique identifier for the brick.",
                  "type": "string"
                },
                "props": {
                  "type": "object",
                  "properties": {
                    "title": "Props",
                    "description": "The properties of the brick react component."
                  },
                  "required": ["title", "description"]
                },
                "position": {
                  "title": "Position",
                  "description": "The position of the brick in the layout.",
                  "type": "object",
                  "properties": {
                    "mobile": {
                      "type": "object",
                      "properties": {
                        "x": {
                          "title": "X",
                          "description": "The column start (0-based) in grid units, not pixels.",
                          "type": "number"
                        },
                        "y": {
                          "title": "Y",
                          "description": "The row start (0-based) in grid units, not pixels.",
                          "type": "number"
                        },
                        "w": {
                          "title": "Width",
                          "description": "The width in columns in grid units, not pixels.",
                          "type": "number"
                        },
                        "h": {
                          "title": "Height",
                          "description": "The height in rows in grid units, not pixels.",
                          "type": "number"
                        },
                        "manualHeight": {
                          "description": "Do not use this field. It is used internally by the editor.",
                          "type": "number"
                        },
                        "hidden": {
                          "description": "Do not use this field. It is used internally by the editor.",
                          "type": "boolean"
                        }
                      },
                      "required": ["x", "y", "w", "h"]
                    },
                    "desktop": {
                      "type": "object",
                      "properties": {
                        "x": {
                          "title": "X",
                          "description": "The column start (0-based) in grid units, not pixels.",
                          "type": "number"
                        },
                        "y": {
                          "title": "Y",
                          "description": "The row start (0-based) in grid units, not pixels.",
                          "type": "number"
                        },
                        "w": {
                          "title": "Width",
                          "description": "The width in columns in grid units, not pixels.",
                          "type": "number"
                        },
                        "h": {
                          "title": "Height",
                          "description": "The height in rows in grid units, not pixels.",
                          "type": "number"
                        },
                        "manualHeight": {
                          "description": "Do not use this field. It is used internally by the editor.",
                          "type": "number"
                        },
                        "hidden": {
                          "description": "Do not use this field. It is used internally by the editor.",
                          "type": "boolean"
                        }
                      },
                      "required": ["x", "y", "w", "h"]
                    }
                  },
                  "required": ["mobile", "desktop"]
                }
              },
              "required": ["type", "id", "props", "position"]
            }
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["label", "path", "bricks"]
      }
    }
  },
  "required": ["manifest", "themes", "pages"]
}
